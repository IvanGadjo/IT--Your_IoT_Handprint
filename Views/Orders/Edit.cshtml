@model Your_IoT_Handprint.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h3>Edit order</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.OrderedOn)
    @Html.HiddenFor(model => model.RecipientAdress)
    @Html.HiddenFor(model => model.Quantity)
    @Html.HiddenFor(model => model.ProjectId)
    @Html.HiddenFor(model => model.UserId)
    


    <div class="form-group">
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            <!--
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
            -->
            <select name="Status" id="Status">
                <option value="Unopened">Unopened</option>
                <option value="In the making">In the making</option>
                <option value="Finished">Finished</option>
                <option value="Sent">Sent</option>
            </select>
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    
    <a href="/Orders/Index" class="btn btn-default">Back to list</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
